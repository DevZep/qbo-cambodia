%script{ src: 'https://js.appcenter.intuit.com/Content/IA/intuit.ipp.anywhere-1.3.3.js', type: 'text/javascript' }
= render 'quickbook_script'
.container
  - if params[:error] == 'true'
    .text-center
      %h1.margin= "Please re-authenticate with QBO by clicking the button below"
      %br
      %br
      = image_tag 'C2QB_green_btn_lg_default.png', onclick: 'intuit.ipp.anywhere.controller.onConnectToIntuitClicked();', id: 'qboimg', data: { mouseover_src: image_url('C2QB_green_btn_lg_hover.png'), origin_src: image_url('C2QB_green_btn_lg_default.png') }
  - else
    .text-center
      %h1.margin= "Please Connect to QuickBooks by clicking the button below"
      %br
      %br
      = image_tag 'C2QB_green_btn_lg_default.png', onclick: 'intuit.ipp.anywhere.controller.onConnectToIntuitClicked();', id: 'qboimg', data: { mouseover_src: image_url('C2QB_green_btn_lg_hover.png'), origin_src: image_url('C2QB_green_btn_lg_default.png') }
