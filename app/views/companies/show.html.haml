.container
  = link_to company_invoices_path(@company), class: 'title-margin'do
    %h4.margin-top 
      =@company.company_name
  .panel.panel-default
    .panel-heading
      .row
        .col-xs-2.text-center#invoice
          = link_to invoices_invoices_path_url(@company) do
            %h4.margin-top Inovices
        .col-xs-2.text-center#debit
          = link_to invoices_debits_path_url(@company) do
            %h4.margin-top Debit Notes
        .col-xs-8.text-right#search
          = form_tag company_invoices_path(@company), method: 'get', class: 'navbar-form navbar-right' do
            .form-group
              .row
                .col-xs-8
                  = text_field_tag :id, nil, class: 'form-control', placeholder: 'Search by Id', required: true
                .col-xs-4
                  = submit_tag 'Search', class: 'btn btn-default'
  
