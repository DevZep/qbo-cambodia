.container
  .panel.panel-default
    .panel-heading
      .row
        .col-xs-4
          = link_to company_invoices_path(@company)do
            %h4.margin-top 
              =@company.company_name
        .col-xs-2
          = link_to invoices_invoices_path_url(@company) do
            %h4.margin-top All Inovices
        .col-xs-2
          = link_to invoices_debits_path_url(@company) do
            %h4.margin-top All Debit Notes
        .col-xs-4
          = form_tag company_invoices_path(@company), method: 'get', class: 'navbar-form navbar-right' do
            .form-group
              .row
                .col-xs-8
                  = text_field_tag :id, nil, class: 'form-control', placeholder: 'Invoice Id', required: true
                .col-xs-4
                  = submit_tag 'Search', class: 'btn btn-default'
  
