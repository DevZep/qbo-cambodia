#translation-modal.modal.fade{"aria-labelledby" => "translationModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h2.modal-title Translation
      .modal-body
        = form_tag '!#', method: :post, remote: true do
          = hidden_field_tag :company_id, @credential.id
          = hidden_field_tag :invoice_id, id: 'invoice_id'
          .row
            .col-xs-6
              %h4 English
            .col-xs-6
              %h4 Khmer
          .row
            .col-xs-6
              .form-group
                = text_field_tag 'customer_name_en', nil, disabled: true, class: 'form-control', id: 'customer-name-en'
            .col-xs-6
              .form-group
                = text_field_tag 'translation_customer[name]', nil, placeholder: 'Customer Name', class: 'form-control'
          .row
            .col-xs-6
              .form-group
                = text_area_tag 'billing_address_en', nil, disabled: true, class: 'form-control', id: 'billing-address-en'
            .col-xs-6
              .form-group
                = text_area_tag 'translation_customer[billing_address]', nil, placeholder: 'Billing Address', class: 'form-control'
          .row
            .col-xs-12.text-center
              %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
              %button.btn.btn-success{:type => "submit"} Translate and View Invoice
