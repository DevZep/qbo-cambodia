%script{ src: 'https://js.appcenter.intuit.com/Content/IA/intuit.ipp.anywhere-1.3.3.js', type: 'text/javascript' }
= render 'quickbook_script'
.row
  .col-xs-2
    = link_to company_invoices_path(credential), class: 'title-margin'do
      %h4 
        =credential.company_name
  .col-xs-2
    = image_tag 'C2QB_green_btn_med_default.png', onclick: 'intuit.ipp.anywhere.controller.onConnectToIntuitClicked();', class: 'qboimage'
  .col-xs-8.text-right#search
    = form_tag company_invoices_path(credential), method: 'get', class: 'navbar-form navbar-right' do
      .form-group
        .row
          .col-xs-8
            = text_field_tag :id, nil, class: 'form-control', placeholder: 'Search by Id', required: true
          .col-xs-4
            = submit_tag 'Search', class: 'btn btn-default'