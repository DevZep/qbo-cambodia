.container
  = render 'translation_modal'
  .panel.panel-default
    .panel-heading
      .row
        .col-xs-4
          = link_to company_invoices_path(credential)do
            %h4.margin-top 
              =credential.company_name
        .col-xs-2
          = link_to invoices_invoices_path_url(credential) do
            %h4.margin-top All Inovices
        .col-xs-2
          = link_to invoices_debits_path_url(credential) do
            %h4.margin-top All Debit Notes
        .col-xs-4
          = form_tag company_invoices_path(credential), method: 'get', class: 'navbar-form navbar-right' do
            .form-group
              .row
                .col-xs-8
                  = text_field_tag :id, params[:id], class: 'form-control', placeholder: 'Invoice Id',required: true
                .col-xs-4
                  = submit_tag 'Search', class: 'btn btn-default'
    .panel-body
      - if invoices.present?
        %table.table
          %thead
            %tr
              %th ID
              %th Customer
              %th Total Amount
              %th Due Date
          %tbody
            = render partial: 'invoice', collection: invoices
      - else
        %h3.text-center No invoice with ID #{params[:id]} can be found
