- debits.each_with_index do |debit,index|
  %tr{ class: wrong_id_sequence?(debits,index) ? "alert-danger clickable-row" : "clickable-row", data: { translation_url: create_customer_translation_path(debit.customer_ref.value), customer_name: debit.customer_name, billing_address: debit.full_billing_address, invoice_id: debit.doc_number, translation: { name: debit.customer_translation.try(:name), billing_address: debit.customer_translation.try(:billing_address) }  } }
    
    - unless wrong_id_sequence?(debits,index)
      %th{ scope: 'row'}= invoice_link(debits[index], @credential)
    - else
      %th= debit.doc_number
    
    %td
      = edit_translation(debits[index], @credential)
      - if wrong_id_sequence?(debits,index)
        %p
          ="This invoice is not using the correct ID format or sequence. Please "
          = link_to "edit the ID in QBO", "https://sandbox.qbo.intuit.com/app/invoice?txnId=#{debits[index].id}", target: '_blank'
    
    %td= "#{debits[index].currency.symbol} #{debits[index].total}"
    
    %td= debit.due_date.to_formatted_s(:custom_format)

   