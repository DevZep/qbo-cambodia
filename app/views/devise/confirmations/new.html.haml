.container
  .row
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            %h2.text-center Resend confirmation instructions
          .panel-body
            = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
              = devise_error_messages!
              %fieldset
                .form-group
                  = f.email_field :email, autofocus: true, placeholder: 'email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control'
              .actions
                = f.submit 'Resend confirmation instructions', class: 'btn btn-success btn-block'
          .panel-footer.text-right
            = render "users/shared/links"
